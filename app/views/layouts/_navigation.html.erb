<div class="ui inverted huge menu teal attached">
  <div class="item">
  <i class="ui dollar icon big"></i>
  </div>
  <a>
    <%= link_to "Finance Tracker", root_path, class: 'item' %>
  </a>
  <% if current_user %>
  <a>
    <%= link_to "My Portfolio", my_portfolio_path, class: 'item' %>
  </a>
  <a><%= link_to "Edit Account", edit_user_registration_path, class: 'item' %></a>

  <div class="right menu">
    <div class="item">
      <i class="user icon"></i>&nbsp;
      <%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
    </div>
    <div class="item">
      <a><%= link_to("Logout", destroy_user_session_path, class: 'ui grey button small', method: :delete) %></a>
    </div>
  </div>
    <% end %>
    <% if !current_user %>
    <div class="right menu">
    <div class="item">
      <a><%= link_to "Sign Up", new_registration_path(resource_name), class: 'ui purple button small', method: :delete %></a>
    </div>
  </div>
  <% end %>
</div>