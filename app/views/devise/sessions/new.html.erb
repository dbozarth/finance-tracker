
  <div class="ui two column grid">
    <div class="sixteen wide column">
    <br/>
      <h2 class="ui aligned header">
        Login To Your Account
      </h2>

      <div class="ui form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
          <div class="field">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'ui input' %>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, autocomplete: 'current-password', class: 'ui input' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="ui teal checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'label' do %>
                <%= resource.class.human_attribute_name('remember_me') %>
              <% end %>
            </div>
          <% end %>

          <div class="field">
          <br/>
            <%= f.submit  t('.sign_in'), class: 'ui violet button' %>
          </div>
        <% end %>
      </div>
      <br/>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
