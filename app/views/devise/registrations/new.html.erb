  <br/>
  <div class="ui two column grid">
    <div class="twelve wide column">
      <h2 class="ui aligned header">
        <%= t('.sign_up') %>
      </h2>

      <div class="ui form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= bootstrap_devise_error_messages! %>

          <div class="ui grid">
            <div class="eight wide column">
              <div class="field">
                <%= f.label :first_name, class: "label" %>
                <%= f.text_field :first_name, class: 'ui input' %>
              </div>
            </div>
            <div class="eight wide column">
              <div class="field">
                <%= f.label :last_name, class: "label" %>
                <%= f.text_field :last_name, class: 'ui input' %>
              </div>
            </div>
          </div>
          
          <div class="field">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autocomplete: 'email', class: 'ui input' %>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, autocomplete: 'current-password', class: 'ui input' %>

            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "label" %>
            <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'ui input' %>
          </div>

          <div class="field">
            <%= f.submit t('.sign_up'), class: 'ui teal small button' %>
          </div>
        <% end %>
      </div>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
