<h5>Search For Friends</h5>

<div id="friend-lookup" class="ui form">
  <%= form_tag search_friends_path, remote: true, method: :get, id: "friend-lookup-form" do %>
    <div class="field">
      <%= text_field_tag :search_param, params[:search_param], id: 'friend_input', placeholder: "Enter a first name, last name or email...", autofocus: true, class: "ui input" %>
    </div>
    <div class="field">
      <%= button_tag(type: :submit, id: 'stock_check', class: "ui teal icon button") do %>
        <i class="ui search icon"></i> Search
      <% end %>
    </div>
  <% end %>
</div>
<br/>
<div id="results">
  <%= render 'friends/result' %>
</div>
